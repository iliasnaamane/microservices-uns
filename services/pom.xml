<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                 http://maven.apache.org/maven-v4_0_0.xsd">

   <modelVersion>4.0.0</modelVersion>
   <artifactId>services</artifactId>
   <version>1.0</version>
   <packaging>pom</packaging>
   <name>Services</name>

   <parent>
       <groupId>projet-integration</groupId>
       <artifactId>root</artifactId>
       <version>1.0</version>
   </parent>

   <modules>
       <module>hotelRPC</module>
       <module>carRPC</module>
       <module>vols</module>
       <module>externals</module>
       <module>orc</module>
   </modules>

   <properties>
       <versions.tomee>7.0.3</versions.tomee>
   </properties>

   <dependencies>
       <dependency>
           <groupId>org.apache.tomee</groupId>
           <artifactId>tomee-embedded</artifactId>
           <version>${versions.tomee}</version>
           <scope>provided</scope>
       </dependency>
   </dependencies>

   <build>
       <defaultGoal>package</defaultGoal>
       <plugins>
           <plugin>
               <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-compiler-plugin</artifactId>
               <version>${versions.maven.compiler}</version>
           </plugin>
           <plugin>
               <groupId>org.apache.tomee.maven</groupId>
               <artifactId>tomee-maven-plugin</artifactId>
               <version>${versions.tomee}</version>
               <configuration>
                   <tomeeClassifier>plus</tomeeClassifier>
                   <args>-Xmx512m -XX:PermSize=256m</args>
                   <deployOpenEjbApplication>true</deployOpenEjbApplication>
               </configuration>
           </plugin>
       </plugins>
   </build>

</project>